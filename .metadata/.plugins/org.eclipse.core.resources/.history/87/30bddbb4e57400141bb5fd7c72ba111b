package edu.dom.kamil.selfstudy;

public class Czas {
	
	private int hour;
	private int minutes;
	private int seconds;
	
	public Czas () {
		hour = 0;
		minutes = 0;
		seconds = 0;
	}
	
	public void setTime(int h, int m, int s) {
		hour = ((h>=0 && h <24) ? h : 0);
		minutes = ((m>=0 && m<60) ? m : 0);
		seconds = ((s>=0 && s<60) ? s : 0);
	}
	
	public String toMilitary() {
		return String.format("%d:%d:%d", hour, minutes, seconds);
	}
	
	
}
